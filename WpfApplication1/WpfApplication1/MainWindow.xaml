<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Activated="Window_Activated">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="497*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <Label Name="lblHello">欢迎光临WPF世界</Label>
            <Button Name="btnThd" Click="btnThd_Click">多线程同步调用</Button>
            <Button Name="btnAppBeginInvoke" Click="Button_Click">BeginInvoke异步调用</Button>
            <Button Name="btnOpenWindowLayout" Click="btnOpenWindowLayout_Click">打开WindowLayout</Button>
        </StackPanel>
    </Grid>
</Window>
